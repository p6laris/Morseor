@page "/Converter"
@using MorseSharp;
@using MorseSharp.Audio.Languages

<MudText Typo="Typo.h2">Morse Converter</MudText>
<MudGrid Class="mt-6">
    <MudItem xs="12" sm="7">
        <MudStack Row="true">
            <MudSelect T="Language" @bind-Value="@Lang" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined" Label="Language" AdornmentIcon="@Icons.Filled.Language" AdornmentColor="Color.Inherit">
                <MudSelectItem Value="Language.English">English</MudSelectItem>
                <MudSelectItem Value="Language.Kurdish">Kurdish</MudSelectItem>
            </MudSelect>
            <MudIcon Icon="@Icons.Filled.ArrowRightAlt" Style="font-size: 4rem;"></MudIcon>
            <MudSelect T="string"  AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined" Label="Morse" Disabled=true>
               <MudSelectItem Value="@("Pizza")">Pizza (Disabled)</MudSelectItem>
            </MudSelect>
        </MudStack>
    </MudItem>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4 mb-5">
            <MudToolBar>
                <MudTooltip Text="Play">
                    <MudIconButton OnClick="PlayMorse" Disabled=!CanPlay Icon="@Icons.Filled.PlayCircleFilled" Color="Color.Inherit" />
                </MudTooltip>
                <MudTooltip Text="Pause">
                    <MudIconButton Disabled=!CanPause OnClick="PauseMorse" Icon="@Icons.Filled.PauseCircleFilled" Color="Color.Inherit" />
                </MudTooltip>
                <MudTooltip Text="Stop">
                    <MudIconButton Disabled=!CanStop OnClick="StopMorse" Icon="@Icons.Filled.StopCircle" Color="Color.Inherit" />
                </MudTooltip>

                <MudSpacer />
                @*<MudTooltip Text="Show morse with light">
                    <MudToggleIconButton @bind-Toggled="@CanLight"
                                         Icon="@Icons.Filled.FlashlightOff" Title="Off"
                                         ToggledIcon="@Icons.Filled.FlashlightOn" ToggledColor="@Color.Primary" ToggledTitle="On" />
                </MudTooltip>*@
                <MudTooltip Text="Settings">
                    <MudIconButton OnClick="Setting" Icon="@Icons.Filled.SettingsApplications" />
                </MudTooltip>
                <MudTooltip Text="Download morse sound">
                    <MudIconButton Disabled=!CanDownload OnClick="DownloadMorse" Icon="@Icons.Filled.CloudDownload" />
                </MudTooltip>
                <MudTooltip Text="Share morse text">
                    <MudIconButton Disabled=!CanShare OnClick="CopyToClipboard" Icon="@Icons.Filled.IosShare" Color="Color.Inherit" />
                </MudTooltip>
            </MudToolBar>
            <MudDivider></MudDivider>

            <MudForm Class="mt-4">
                <MudTextField T="string" Label="Message" Immediate=true @bind-Value="@Message" TextChanged="Convert" Variant="Variant.Text" Lines="5" />
                <MudDivider></MudDivider>
                <MudTextField Class="mt-4" T="string" @bind-Value="@Morse" Label="Morse Code" Immediate=true Disabled=true Variant="Variant.Filled" Lines="5" />
            </MudForm>

        </MudPaper>
    </MudItem>
</MudGrid>


